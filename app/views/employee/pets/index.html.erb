<h1>Listing Employee Pets</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_pets.each do |employee_pet| %>
      <tr>
        <td><%= link_to 'Show', employee_pet %></td>
        <td><%= link_to 'Edit', edit_employee_pet_path(employee_pet) %></td>
        <td><%= link_to 'Destroy', employee_pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

